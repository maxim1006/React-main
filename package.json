{
    "name": "react-main",
    "version": "0.1.0",
    "engines": {
        "node": "13.7.0",
        "npm": "6.13.1"
    },
    "private": true,
    "scripts": {
        "client": "cd client && npm start",
        "server": "nodemon -r esm ./server/server.js",
        "server:prod": "NODE_ENV=production nodemon -r esm ./server/server.js",
        "build": "cd ./client && npm run build && cd ../",
        "start": "node -r esm ./server/server.js",
        "heroku-postbuild": "cd ./client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
        "precommit": "lint-staged",
        "lint": "eslint ./client/src --ext .ts,.tsx,.js,.jsx",
        "lint:fix": "eslint ./client/src --ext .ts,.tsx,.js,.jsx --fix"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier — double-quote — write",
            "git add"
        ]
    },
    "dependencies": {
        "@types/jest": "^25.2.1",
        "@types/node": "^13.13.2",
        "@types/react": "^16.9.34",
        "@types/react-dom": "^16.9.6",
        "@types/react-redux": "^7.1.7",
        "@types/styled-components": "^4.4.1",
        "axios": "^0.19.0",
        "@types/react-router-dom": "^5.1.4",
        "apollo-server": "^2.11.0",
        "apollo-server-express": "^2.11.0",
        "body-parser": "^1.18.3",
        "code-prettify": "^0.1.0",
        "compression": "1.7.4",
        "cors": "2.8.5",
        "dotenv": "7.0.0",
        "esm": "^3.2.25",
        "express": "^4.16.4",
        "faker": "^4.1.0",
        "fs-extra": "^8.1.0",
        "graphql": "^14.6.0",
        "mongoose": "^5.9.5",
        "node-fetch": "^2.6.0",
        "raw-body": "^2.4.1",
        "stripe": "6.28.0",
        "typescript": "^3.8.3"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.33.0",
        "@typescript-eslint/parser": "^2.33.0",
        "babel-eslint": "10.1.0",
        "eslint": "^6.6.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-airbnb-typescript": "^7.2.1",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.20.0",
        "eslint-plugin-react-hooks": "^4.0.2",
        "lint-staged": "^10.2.2",
        "prettier": "^1.19.1"
    }
}
